<p id="notice"><%= notice %></p>

<h1>Wildlife Tracker - Oregon Forest</h1>

<div class="table-responsive">
  <table class="table ">
    <thead>
      <tr>
        <th>Common name</th>
        <th>Latin name</th>
        <th>Kingdom</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td><%= animal.common_name %></td>
          <td><%= animal.latin_name %></td>
          <td><%= animal.kingdom %></td>
          <td><%= link_to 'Show', animal %></td>
          <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
          <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr id="appendAnimal"></tr>
    </tbody>
  </table>
</div>

<hr/>
<p>
  <input type="text" name="animal[common_name]" placeholder="Common Name" id="common_name" class="form-control"/>
  <br/>
  <input type="text" name="animal[latin_name]" placeholder="Latin Name" id="latin_name" class="form-control"/>
  <br/>
  <input type="text" name="animal[kingdom]" placeholder="Kingdom " id="kingdom" class="form-control"/>
  <br/>
  <input type="hidden" name="animal[id]" id="animal_id" value="<%=@animal.id%>"/>
  <button id="add_new_animal" class="btn btn-default">Add New Animal</button>
</p>

